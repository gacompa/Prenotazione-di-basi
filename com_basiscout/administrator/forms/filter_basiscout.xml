<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="COM_BASISCOUT_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_BASISCOUT_FILTER_STATE"
               description="COM_BASISCOUT_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        

    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_BASISCOUT_LIST_FULL_ORDERING"
               description="COM_BASISCOUT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">COM_BASISCOUT_ID_ASC</option><option value="a.id DESC">COM_BASISCOUT_ID_DESC</option><option value="a.state ASC">COM_BASISCOUT_STATE_ASC</option><option value="a.state DESC">COM_BASISCOUT_STATE_DESC</option><option value="a.ordering ASC">COM_BASISCOUT_ORDERING_ASC</option><option value="a.ordering DESC">COM_BASISCOUT_ORDERING_DESC</option><option value="a.nome ASC">COM_BASISCOUT_NOME_ASC</option><option value="a.nome DESC">COM_BASISCOUT_NOME_DESC</option><option value="a.luogo ASC">COM_BASISCOUT_LUOGO_ASC</option><option value="a.luogo DESC">COM_BASISCOUT_LUOGO_DESC</option><option value="a.descrizione ASC">COM_BASISCOUT_DESCRIZIONE_ASC</option><option value="a.descrizione DESC">COM_BASISCOUT_DESCRIZIONE_DESC</option><option value="a.posti_interno ASC">COM_BASISCOUT_POSTI_INTERNO_ASC</option><option value="a.posti_interno DESC">COM_BASISCOUT_POSTI_INTERNO_DESC</option><option value="a.posti_esterno ASC">COM_BASISCOUT_POSTI_ESTERNO_ASC</option><option value="a.posti_esterno DESC">COM_BASISCOUT_POSTI_ESTERNO_DESC</option>

        </field>

       <field name="limit"
               type="limitbox"
               label="COM_BASISCOUT_LIST_LIMIT"
               description="COM_BASISCOUT_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>